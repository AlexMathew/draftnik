{
  "manifest_version": 2,
  "name": "Draftnik",
  "short_name": "Draftnik",
  "version": "1.0.0",
  "description": "Save FPL drafts.",
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo48.png"
  },
  "content_scripts": [{
    "matches": ["https://fantasy.premierleague.com/*"],
    "js": ["content.bundle.js"],
    "run_at": "document_end"
  }],
  "permissions": [
    "http://localhost:8000/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}