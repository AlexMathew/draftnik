{
  "manifest_version": 2,
  "name": "Draftnik",
  "short_name": "Draftnik",
  "version": "1.0.2",
  "description": "Save drafts you create on Fantasy Premier League.",
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "web_accessible_resources": [
    "icons/logo48.png"
  ],
  "content_scripts": [{
    "matches": ["https://fantasy.premierleague.com/*"],
    "js": ["content.bundle.js"],
    "run_at": "document_end"
  }],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/logo48.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "http://localhost:8000/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}